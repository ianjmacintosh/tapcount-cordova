<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ianjmacintosh.tapcount" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>TapCount</name>
    <description>
        TapCount helps you keep track of whatever it is you're counting
    </description>
    <author email="ianjmacintosh@gmail.com" href="https://www.ianjmacintosh.com">
        Ian J. MacIntosh
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="public/stopwatch-centered-512.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon src="public/stopwatch-centered-512.png" />
    </platform>
</widget>
